{
  // 禁用 Local History 扩展
  "local-history.enabled": false,
  "local-history.saveDelay": 0,
  
  // 禁用 Cursor 的历史记录功能
  "workbench.localHistory.enabled": false,
  "workbench.localHistory.maxFileSize": 0,
  
  // 排除 .history 文件夹
  "files.watcherExclude": {
    "**/.history/**": true
  },
  "files.exclude": {
    "**/.history": true
  },
  "search.exclude": {
    "**/.history": true
  }
}

