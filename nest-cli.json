{
  "$schema": "https://json.schemajs.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "tsConfigPath": "tsconfig.json",
    "assets": [
      {
        "include": "**/*.json",
        "exclude": "**/node_modules/**",
        "watchAssets": true
      },
      {
        "include": "**/*.md",
        "exclude": "**/node_modules/**",
        "watchAssets": true
      },
      {
        "include": "../public/**/*",
        "outDir": "dist",
        "watchAssets": true
      }
    ],
    "watchAssets": true
  }
}

