# ================================
# 应用配置
# ================================
# 服务运行端口（必填）
PORT=8080

# 运行环境：development | production | test（必填）
NODE_ENV=development

# ================================
# Agent API 配置（AI 智能回复服务）
# ================================
# Agent API 密钥（必填）
AGENT_API_KEY=your-api-key-here

# Agent API 基地址（必填）
AGENT_API_BASE_URL=http://localhost:3000/api/v1

# 默认使用的 AI 模型（必填）
AGENT_DEFAULT_MODEL=anthropic/claude-3-7-sonnet-20250219

# Agent API 请求超时时间（毫秒）（必填）
AGENT_API_TIMEOUT=60000

# 是否启用 AI 自动回复
ENABLE_AI_REPLY=true

# ================================
# 托管平台 API 配置
# ================================
# Stride API 基地址（必填）
STRIDE_API_BASE_URL=https://stride-bg.dpclouds.com

# ================================
# 会话管理配置
# ================================
# 每个会话保留的最大消息数（必填）
CONVERSATION_MAX_MESSAGES=20

# 会话超时时间（毫秒，默认 2 小时）（必填）
CONVERSATION_TIMEOUT_MS=7200000

# 会话清理检查间隔（毫秒，默认 1 小时）（必填）
CONVERSATION_CLEANUP_INTERVAL_MS=3600000

# ================================
# HTTP 客户端配置
# ================================
# HTTP 请求超时时间（毫秒）（必填）
HTTP_CLIENT_TIMEOUT=10000
